<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <%= link_to t("devise.shared.links.sign_in", :default => "Sign in"), new_session_path(resource_name), id: "login-form-link" %>
          </div>
          <div class="col-xs-6">
            <%= link_to t("devise.shared.links.sign_up", :default => "Sign up"), new_registration_path(resource_name), class: "active", id: "register-form-link" %>
          </div>
        </div>
        <hr>
      </div>

      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
          </div>

          <div class="form-group">
              <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                  <%= f.submit t('devise.shared.links.sign_up', :default => "Sign up"), id: "register-submit", class: "form-control btn btn-register" %>
                </div>
              </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
