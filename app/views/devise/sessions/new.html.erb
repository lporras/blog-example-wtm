<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-6">
            <%= link_to t("devise.shared.links.sign_in", :default => "Sign in"), new_session_path(resource_name), class: "active", id: "login-form-link" %>
          </div>
          <div class="col-xs-6">
            <%= link_to t("devise.shared.links.sign_up", :default => "Sign up"), new_registration_path(resource_name) %>
          </div>
        </div>
        <hr>
      </div>

      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {id: "login-form"}) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Emal" %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group text-center">
                  <%= f.check_box :remember_me, "tab-index" => "3" %> <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <%= f.submit t('devise.shared.links.sign_in', :default => "Sign in"), id: "login-submit", "tab-index" => "4", class: "form-control btn btn-login" %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="text-center">
                      <%= link_to t("devise.shared.links.forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name), class: "forgot-password" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>